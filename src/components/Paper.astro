---
export interface Props {
  title: string;
}

const title = Astro.props.title;
---

<main class="my-8 bg-white relative">
  <aside
    class="px-3 md:px-4 justify-around absolute space-y-[7.38rem] md:space-y-[9.12rem] -top-3 bottom-0 z-10"
  >
    <div class="h-6 w-6 bg-enamel rounded-full"></div>
    <div class="h-6 w-6 bg-enamel rounded-full"></div>
    <div class="h-6 w-6 bg-enamel rounded-full"></div>
    <div class="h-6 w-6 bg-enamel rounded-full"></div>
    <div class="h-6 w-6 bg-enamel rounded-full md:block"></div>
  </aside>

  <section
    class="mx-12 md:mx-14 px-4 py-6 border-x border-enamel text-carbon leading-6 md:leading-6 text-xs md:text-sm"
  >
    <h1 class="text-2xl pb-4"># {title}</h1>
    <slot />
  </section>
  <aside
    class="px-3 md:px-4 justify-around absolute space-y-[7.38rem] md:space-y-[9.12rem] -top-3 bottom-0 right-0 z-10"
  >
    <div class="h-6 w-6 bg-enamel rounded-full"></div>
    <div class="h-6 w-6 bg-enamel rounded-full"></div>
    <div class="h-6 w-6 bg-enamel rounded-full"></div>
    <div class="h-6 w-6 bg-enamel rounded-full"></div>
    <div class="h-6 w-6 bg-enamel rounded-full md:block"></div>
  </aside>
</main>
